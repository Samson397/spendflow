rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read and write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Community Tips - all authenticated users can read and create
    match /communityTips/{tipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      
      // Comments on tips
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
      }
    }
    
    // Tip Reports - users can create reports, only admins can read
    match /tipReports/{reportId} {
      allow create: if request.auth != null;
      allow read: if false; // Admin access via Firebase Console
    }
    
    // For development - allow all authenticated users (remove in production)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
