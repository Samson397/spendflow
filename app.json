{
  "expo": {
    "name": "SpendFlow",
    "slug": "SpendFlow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "main": "index.js",
    "sdkVersion": "54.0.0",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/logo.png"
    },
    "android": {
      "icon": "./assets/logo.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/logo.png",
      "bundler": "metro",
      "name": "SpendFlow - Smart Finance Management",
      "shortName": "SpendFlow",
      "lang": "en",
      "scope": "/",
      "themeColor": "#667eea",
      "backgroundColor": "#667eea",
      "description": "Master Your Money, Amplify Your Life - Smart personal finance management",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait",
      "preferRelatedApplications": false,
      "manifest": "./web/manifest.json",
      "build": {
        "babel": {
          "include": ["@expo/html-elements"]
        },
        "output": "single"
      },
      "meta": {
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent",
        "apple-mobile-web-app-title": "SpendFlow"
      }
    }
  }
}
