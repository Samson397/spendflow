  "background_color": "#667eea",
  "display": "standalone",
  "scope": "https://spendflow.uk/",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "categories": ["finance", "productivity"],
  "screenshots": [
    {
      "src": "/assets/hero.jpg",
      "type": "image/jpeg",
      "sizes": "1024x500",
      "label": "SpendFlow Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Expense",
      "short_name": "Expense",
      "description": "Quickly add a new expense",
      "url": "/quick-add?type=expense&source=pwa",
      "icons": [{ "src": "/assets/logo.png", "sizes": "96x96" }]
    },
    {
      "name": "Add Income",
      "short_name": "Income",
      "description": "Quickly add income",
      "url": "/quick-add?type=income&source=pwa",
      "icons": [{ "src": "/assets/logo.png", "sizes": "96x96" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your financial dashboard",
      "url": "/dashboard?source=pwa",
      "icons": [{ "src": "/assets/logo.png", "sizes": "96x96" }]
    },
    {
      "name": "Wallet",
      "short_name": "Wallet",
      "description": "Manage your cards and accounts",
      "url": "/wallet?source=pwa",
      "icons": [{ "src": "/assets/logo.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "protocol_handlers": [
    {
      "protocol": "web+spendflow",
      "url": "/?action=%s"
    }
  ]
}
